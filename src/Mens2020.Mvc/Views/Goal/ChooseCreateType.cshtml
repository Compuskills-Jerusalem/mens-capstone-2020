
@{
    ViewBag.Title = "ChooseCreateType";
}

@section scripts{
    <link rel="stylesheet" type="text/css" href="Content/MyStyleSheet.css">
    <style>
        form {
            width: 200px;
            height: 200px;
            display: inline-block;
            left: initial;
            top: initial;
            margin-left: initial;
            vertical-align: top;
            position: initial;
        }

        a {
            color: black;
            text-decoration: solid;
            display: inline-block;
            width: 100%;
            height: 100%;
        }

        .containers {
            border: solid;
            background-color: blanchedalmond;
            position: absolute;
            width: 150px;
            height: 150px;
            margin: 25px;
            line-height: 60px;
        }

        .experiancedUser {
            display: none;
        }

        .small {
            height: 20px;
            width: 20px;
            margin: initial;
            display: block;
        }
    </style>
    <script>
        window.addEventListener("load", function () {
            this.document.querySelector("button[id='switchToExperianced']").addEventListener("click", function (e) {
                document.querySelector(".nonExperiancedUser").style.display = "none";
                document.querySelector(".experiancedUser").style.display = "block";

                e.preventDefault();
            })
        })

    </script>
}
<h2>ChooseCreateType</h2>

<div class="experiancedUser" style="width:500px; margin:auto; margin-top:200px">
    <form>
        <div class="containers">
            <a href="MakeGuidedGoal.html">Do You Want To Make A Goal Together</a>
        </div>
    </form>
    <form style="float:right">
        <div class="containers">
            <a href="QuickGoal.html">Do You Want To Make A Quick Goal</a>
        </div>
    </form>
</div>

<div class="nonExperiancedUser">
    <form>
        <div class="containers">
            <a href="MakeGuidedGoal.html">Let's Make A Goal Together!</a>
        </div>
    </form>
</div>
<form class="small" style="float:right; margin-bottom:200px">
    <button class="small" id="switchToExperianced"></button>
</form>



